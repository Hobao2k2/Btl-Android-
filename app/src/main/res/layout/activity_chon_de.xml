<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9966"
    android:orientation="vertical"
    tools:context=".MainActivity2_de">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:textColor="#ff0000"
        android:text="Chào mừng bạn đến với Toán Học mức độ dễ" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/icon_muc_do_de" />

    <ListView
        android:id="@+id/lvchonDe"
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:layout_marginTop="15dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnExit"
            android:layout_width="58dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#ff9966"
            app:srcCompat="@drawable/icon_quay_lai_trang_truoc" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="58dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#ff9966"
            app:srcCompat="@drawable/icon_home" />


    </LinearLayout>
</LinearLayout>