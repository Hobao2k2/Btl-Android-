<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4A460"
    tools:context=".Activity_chon_de_so_1">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Chào mừng bạn đến với đề số 1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Câu số 19:" />
    <RadioGroup
        android:id="@+id/question1Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/answer1A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án A" />

        <RadioButton
            android:id="@+id/answer1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án B" />
        <RadioButton
            android:id="@+id/answer1C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án C" />

        <RadioButton
            android:id="@+id/answer1D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án D" />

        <!-- Thêm các RadioButton cho các đáp án khác -->

    </RadioGroup>
    <TextView
        android:id="@+id/cau2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Câu số 20:" />
    <RadioGroup
        android:id="@+id/question2Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/answer2A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án A" />

        <RadioButton
            android:id="@+id/answer2B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án B" />
        <RadioButton
            android:id="@+id/answer2C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án C" />

        <RadioButton
            android:id="@+id/answer2D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án D" />

        <!-- Thêm các RadioButton cho các đáp án khác -->
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnExit"
            android:layout_width="58dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#ff9966"
            app:srcCompat="@drawable/icon_quay_lai_trang_truoc" />

        <Button
            android:id="@+id/btnNopBai"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Nộp Bài" />


    </LinearLayout>
</LinearLayout>