<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="#808080"
        android:layout_height="120dp" >

        <TextView
            android:id="@+id/sttDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="160dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Đề số 1" />

        <ImageView
            android:id="@+id/dongho"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginTop="76dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/icon_dong_ho" />

        <TextView
            android:id="@+id/thoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="80dp"
            android:text="20 phút" />

        <ImageView
            android:id="@+id/quyensach"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginTop="74dp"
            android:layout_marginLeft="270dp"
            app:srcCompat="@drawable/icon_quyen_sach" />

        <TextView
            android:id="@+id/soluongcau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="304dp"
            android:layout_marginTop="76dp"
            android:text="20 câu" />
    </androidx.cardview.widget.CardView>
</LinearLayout>